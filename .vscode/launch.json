{
    "version": "0.2.0",
    "configurations": [      
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Locally",
        "program": "${workspaceFolder}/src/index.ts",
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ],
        "env": {
          "NODE_ENV": "development"
        }
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Debug Container",
        "preLaunchTask": "start-compose",
        "postDebugTask": "stop-compose",
        "showAsyncStacks": true,
        "protocol": "inspector",
        "port": 9229,
        "restart": false,
        "timeout": 10000,
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app/bake",
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ],
        "skipFiles": [
          "<node_internals>/**/*.js",
        ]
      }
    ]
  }